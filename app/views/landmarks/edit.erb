<h2>Edit Historical Landmark</h2>

<form method='post' action='/landmarks/<%=@landmark.id%>'>
<input type="hidden" name="_method" value="patch" />
<label> Change Name </label><input type="text" id="name" name="landmark[name]" value="<%=@landmark.name%>"/>
<label>Change Year Completed </label><input type="text" id="year_completed" name="landmark[year_completed]" value="<%=@landmark.year_completed%>"/>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
<input type="submit" value="Edit Landmark" />
</form>

