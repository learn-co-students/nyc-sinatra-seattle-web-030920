<h2>Edit Historical Landmark</h2>

<form method="POST" action="/landmarks/<%=@landmark.id%>">
  <input type="hidden" name="_method" value="patch" />
  <%= @landmark.name %>
  <%= @landmark.year_completed.to_s %>
  Landmark Name: <input type="text" name="landmark[name]" id="name" />
  Landmark Year: <input type="text" name="landmark[year_completed]" id="year_completed" />

  <input type="submit" value="Edit Landmark" />
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
