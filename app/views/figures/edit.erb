<h1> Edit this Figure! </h1>
<form method='post' action='/figures/<%=@figure.id%>'>
<input type="hidden" name="_method" value="patch" />
<label> Change Name </label><input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"/>

<h2> Change Titles </h2>

<% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %><br>
<% end %>

<h2> Create New Title </h2>

<input type="text" id="new_title" name="title[name]"/>

<h2> Landmarks </h2>

<% Landmark.all.each do |lm| %>
  <input type="checkbox" name="figure[landmark_ids][]" id="<%= lm.name %>" value="<%= lm.id %>"<%='checked' if @figure.landmarks.include?(lm) %>><%= lm.name %><br>
<% end %>

<h2> Create Landmark </h2>

<input type="text" id="new_landmark" name="landmark[name]"/>

<input type="submit" value="Edit Figure" />
</form>